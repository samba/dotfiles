" DEPLOY: 
" wget http://github.com/samba/dotfiles/raw/master/vim/vimrc-minimal -O ~/.vimrc

" This minimal vimrc is intended to be easily deployed to machines where my
" dotfiles are not already installed, while maintaining a basic feature set
" for usability.



filetype plugin indent on
if has('syntax')
	syntax on
  nmap .SS :syn sync fromstart
endif
set modeline
set foldenable

set mouse=nv


nmap .n :next<CR>
nmap .p :prev<CR>

" put new windows below and right by default
set splitbelow splitright

set tabstop=2 " spaces for tabs
set shiftwidth=2 " spaces for indentation
set expandtab " no real tabs
nmap .T :set expandtab!<CR>


set nowrap " no wrapping of lines
nmap .W :set nowrap!<CR>

" toggles auto-changedir in Ex mode?
nmap .C :set invacd<CR>

" toggle auto-indent
set autoindent
nmap .I :set autoindent!<CR>

set number " enable line numbering, and a toggle shortcut
nmap .N :set number!<CR>

" toggles paste mode
nmap .P :set paste!<CR>

" toggle non-printing characters
nmap .L :set list!<CR>

" toggle readonly
nmap .ro :set invreadonly<CR>

set incsearch " search while typing
nmap .is :set incsearch!<CR>
